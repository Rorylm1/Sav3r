



<div class="margin"></div>
  <% if params[:query].present?%>
  <h2 id="search-match"><%= @count %> results matching <%= params[:query] %></h2>
  <% end %>
<div class="margin"></div>

<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
      Sort by
    </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
        <li><button class="dropdown-item" type="button">Brand: A-Z</button></li>
        <li><button class="dropdown-item" type="button">Brand: Z-A</button></li>
        <li><button class="dropdown-item" type="button">Price: Cheapest first</button></li>
      </ul>
</div>

<div class="wrapper">
  <div class="cards">
  <% @items.each do |item| %>
   <%= link_to item_path(item) do %>
        <div class="each-card">
          <div class="image">
          <img src="<%= item.image %>" alt="">
          </div>

          <div class="name-and-price">
            <div class="name">
              <%= item.brand %> <%= item.name.first(30) %> <%= item.volume %> <br>
            </div>
            <div class="flex">
              <div class="price">
                <p><strong>Â£ <%='%.2f' % item.price %></strong></p>
              </div>
              <div class="btn btn-success btn-card">
                <p>Add</p>
              </div>
            </div>
          </div>

        </div>
      <% end %>
    <% end %>
  </div>


</div>
