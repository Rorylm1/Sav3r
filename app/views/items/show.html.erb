
<div>
  <p>Categories > <%= @item.category %> </p>
</div>

<div class="show-flex">
  <div class="show-card">
      <div class="show-image">
        <img src="<%= @item.image %>" alt="">
      </div>

      <div class="brand">
        <h2> <%= @item.name %> </h2>
      </div>

      <div class="volume">
        <p>Brand: <%=  @item.brand%></p> <br>
        <p>Quantity: <%= @item.volume %></p>
      </div>

      <div class="basket-button">
        <%= link_to "Add to Basket", basket_item_order_histories_path(@basket, @item), class: 'btn btn-success text-white category-button', style: ' width: 100%; background-color: #06D6A0; ', data: {turbo_method: :post} %> <br>
      </div>
    </div>

  </div>
  <div class="show-card-shop">
      <% @item.shops.first(8).each do |shop| %>
        <div class="shop-info">

          <div class="shop-name">
           <p><%= shop.name %><strong> - Â£<%= '%.2f' % shop.price %></strong></p>
          </div>

          <div class="shop-img">
          <%= cl_image_tag Item::BRANDS["#{shop.name}"], crop: :fill %>
          </div>

        </div>

      <% end %>
      </div>
</div>
